<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LinuxConversionExpert.Views.InstallDistroView"
             Padding="50">
    
    <StackPanel Spacing="100">
        <TextBlock Text="What distro would you like to install?" FontSize="20" FontWeight="Bold"/>
        
        <Grid ColumnSpacing="10" RowSpacing="10"
              HorizontalAlignment="Center">
        
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        
            <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  HorizontalAlignment="Center"
                    Click="UnsureDistro_OnClick">
                
                <TextBlock Text="I'm not sure yet" FontSize="20"/>
            </Button>
            
            <Button Grid.Row="1" Grid.Column="0"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Click="ZorinOS_OnClick">
            
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Zorin OS" FontSize="20"/>
                </StackPanel>
            </Button>
        
            <Button Grid.Row="1" Grid.Column="1"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Click="Kubuntu_OnClick">
            
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Kubuntu" FontSize="20"/>
                </StackPanel>
            </Button>
        
            <Button Grid.Row="2" Grid.Column="0"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Click="Mint_OnClick">
            
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Linux Mint" FontSize="20"/>
                </StackPanel>
            </Button>
        
            <Button Grid.Row="2" Grid.Column="1"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Click="Ubuntu_OnClick">
            
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Ubuntu" FontSize="20"/>
                </StackPanel>
            </Button>
            
            <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"
                    Click="DifferentDistro_OnClick">
                
                <TextBlock Text="I want to install a different distro" FontSize="20"/>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
