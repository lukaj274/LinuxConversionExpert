<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LinuxConversionExpert.Views.ChooseDistroView">
    <StackPanel
        Orientation="Vertical"
        Margin="30"
        Spacing="50">
        
        <TextBlock Text="Find the perfect distro for you by filling out this form" FontSize="20" FontWeight="Bold"/>
        
        <Button Click="FindDistro_OnClick">
            <TextBlock Text="Continue -->" FontSize="20"/>
        </Button>
        
        <TextBlock Text="Or give my recommendations a try:" FontSize="20" FontWeight="Bold"/>
    </StackPanel>
</UserControl>
